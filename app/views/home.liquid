<h1>{{ title }}</h1>

<h2>API endpoints</h2>

<ul>
{% for name in endpoints %}
  <li><a href="/{{ name }}">{{ name }}</a></li>
{% endfor %}
</ul>

{% if examples.size > 0 %}
<h2>Examples</h2>

<ul>
{% for ex in examples %}
  <li><a href="{{ ex.link }}">{{ ex.name }}</a> {{ ex.description }}</li>
{% endfor %}
</ul>
{% endif %}

<h2>Data Details</h2>
<ul class="dictionary">
  {% for category in categories %}
    <li class="dictionary__category">
      <h3> {{ category.name }} </h3>
      <div> {{ category.description }} </div>
      <ul>
        {% for field in category.fields %}
          <li class="dictionary__field">
            <div class="dictionary__field-item dictionary__field-name"> {{ field }} </div>
            <div class="dictionary__field-item"> lorem ipsum... (field description placeholder) </div>
          </li>
        {% endfor %}
      </ul>
    </li>
  {% endfor %}
</ul>
